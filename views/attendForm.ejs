<form method="post" action="/event/<%= eventid %>" enctype="application/x-www-form-urlencoded" class="form">

    <div class="field<%= locals.isInvalid('name', errors) ?  ' field--invalid' : '' %>">
      <label for="name">Name*</label>
      <input type="text" name="name" id="name" value="<%= formData.name %>" class="">
    </div>
  
    <div class="field field--textarea<%= locals.isInvalid('description', errors) ?  ' field--invalid' : '' %>">
      <label for="comment">comment:</label>
      <textarea name="comment" id="comment"><%= formData.comment %></textarea>
    </div>
  
    <% if (errors.length > 0) { %>
      <h2 class="errors__title">error with event:</h2>
      <ul class="errors">
        <% errors.forEach((error) => { %>
          <li class="error"><label for="<%= error.param %>"><%= error.msg %></label></li>
        <% }); %>
      </ul>
    <% } %>
  
    <button class="button button--large button--margin">sign up</button>
  </form>